<:use 'method.crotmp'>
<:use 'enum.crotmp'>
<:sub rclass($class)>
<@$class.bases: $base>
use <$base>;
</@>
<@$class.enums: $enum>
<&enum($enum)>
</@>

class <$class.name>  {
    <@$class.bases: $base>
    also does <$base>;
    </@>
    <@$class.methods: $method>
<&method($method)>
    </@>
}
</:>
<&rclass(.class)>
